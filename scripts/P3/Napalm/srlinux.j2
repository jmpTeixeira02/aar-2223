{
    "network-instance default" : {
        "admin-state": "enable",
        "protocols": {
            "ospf": {
                "instance default": {
                    "area 0.0.0.0": {
                        {% for n in range (4) %}
                            {% if n+1 != interface.number %}
                                "interface {{ interface.name }}{{ n+1 }}.1" : {} {% if n+1 != 4 %}, {% endif %}
                            {% endif %}
                        {% endfor %}
                    },
                    "area {{ interface.number }}.{{ interface.number }}.{{ interface.number }}.{{ interface.number }}": {
                        {% for n in range (4) %}
                            {% if n+1 == interface.number %}
                                "interface {{ interface.name }}{{ n+1 }}.1" : {}
                            {% endif %}
                        {% endfor %}
                    }
                }
            }
        }
    },

    {% for n in range (4) %}
    "interface {{ interface.name }}{{ n+1 }}": {
        "admin-state": "enable",
        "subinterface 1": {
            "ipv4": {
                {% if n+1 == interface.number %}
                "address": "192.168.{{ interface.number }}.254/24"
                {% else %}
                "address": "172.16.{{ n+1 }}{{ interface.number }}.{{ interface.number }}/24"
                {% endif %}
            }
        }
    },
    {% endfor %}
    "interface lo0":{
        "loopback-mode": "true",
        "subinterface 1": {
            "ipv4": {
                "address": "172.16.0.{{ interface.number }}/32"
            }
        }
    }
}